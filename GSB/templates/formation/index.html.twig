{% extends 'base.html.twig' %}



{% block body %}
<style>
         .button {
         background-color: #1c87c9;
         border: none;
         color: white;
         padding: 5px 7px;
         text-align: center;
         text-decoration: none;
         display: inline-block;
         font-size: 10px;
         cursor: pointer;
         }
         .button1 {
         background-color: #1c87c9;
         border: none;
         color: white;
         padding: 20px 34px;
         text-align: center;
         text-decoration: none;
         display: inline-block;
         font-size: 20px;
         margin: 4px 2px;
         cursor: pointer;
         }
      </style>
<center><h1>Bienvenue {{ app.user.prenom }}, modifiez les formations. </h1></center>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Actions</th>
            <th>Date début</th>     
            <th>Produit</th>             
            <th>Nombre d'heures</th>
            <th>Département</th>
            <th>Ville</th>
        </tr>
    </thead>
    <tbody>
        {% for formation in formations %}      
            <tr>
                <td>{{ formation.id}}</td>
                <td> <a href="{{path('formation_modifier',{'id':formation.id})}}" class="button">Modifier</a> <a href="{{ path('formation_supprimer',{'id':formation.id}) }}" class="button">Supprimer</a></td>
                <td>{{ formation.DateDebut | date('d/m/y')}} à {{ formation.DateDebut | date('h:m:s')}}</td>
                <td>{{ formation.produit.libelle}}</td>
                <td>{{ formation.NbreHeures}}</td>
                <td>{{ formation.Departement}}</td>
                <td>{{ formation.Ville}}</td>
            </tr>       
        {% endfor %}
    </tbody>
</table>
<a href="{{path('formation_ajouter')}}" class="button">Ajouter</a>
{% endblock %}
